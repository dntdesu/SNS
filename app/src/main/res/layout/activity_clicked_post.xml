<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ClickedPostActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/clicked_post_description"
        android:textSize="14sp"
        android:padding="5dp"
        android:text="description"
        android:background="@color/cardview_light_background" />

    <ImageView
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:id="@+id/clicked_post_image"
        android:layout_below="@+id/clicked_post_description"
        android:scaleType="fitCenter" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/clicked_post_image">


        <Button
            android:id="@+id/clicked_post_delete"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:background="@drawable/button"
            android:text="Delete post"
            android:textAllCaps="false"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textColor="@color/cardview_light_background" />


    </RelativeLayout>


</RelativeLayout>